# ===========================================
# Sistema Gerador de Questões Acadêmicas
# Configuração de Ambiente
# ===========================================

# ===== CONFIGURAÇÕES DO SERVIDOR =====
APP_NAME="Gerador de Questões Acadêmicas"
APP_ENV=development
DEBUG=true
SECRET_KEY=sua-chave-secreta-muito-segura-aqui-mude-em-producao

# ===== DATABASE =====
DATABASE_URL=postgresql://questgen_user:questgen_pass@db:5432/questgen_db
POSTGRES_USER=questgen_user
POSTGRES_PASSWORD=questgen_pass
POSTGRES_DB=questgen_db

# ===== REDIS =====
REDIS_URL=redis://redis:6379/0

# ===== CHAVES DE API - IA =====
# NOTA: Pelo menos uma chave de IA deve ser configurada (ou use Ollama local)

# OpenAI (Principal) - Obtenha em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-sua-chave-openai-aqui

# Google Gemini (Fallback) - Obtenha em: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=sua-chave-google-gemini-aqui

# Anthropic Claude (Fallback) - Obtenha em: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-sua-chave-claude-aqui

# Provedor padrão de IA: openai | gemini | claude
AI_PROVIDER=openai

# ===== CONFIGURAÇÕES DE UPLOAD =====
MAX_FILE_SIZE_MB=20
ALLOWED_EXTENSIONS=pdf,txt,docx
UPLOAD_DIR=/tmp/uploads

# ===== CONFIGURAÇÕES DE GERAÇÃO =====
MAX_QUESTIONS_PER_REQUEST=20
MIN_CONTENT_WORDS=500
GENERATION_TIMEOUT_SECONDS=120

# ===== JWT AUTH =====
JWT_SECRET_KEY=jwt-secret-key-muito-segura-mude-em-producao
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===== CORS =====
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===== PORTAL DADOS ABERTOS =====
OPEN_DATA_API_URL=https://dadosabertos.camara.leg.br/api/v2
OPEN_DATA_CACHE_TTL=3600
